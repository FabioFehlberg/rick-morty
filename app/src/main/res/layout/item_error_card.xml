<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvError"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/margin_padding_small"
    android:layout_marginTop="@dimen/margin_padding_small"
    android:layout_marginEnd="@dimen/margin_padding_small"
    android:clickable="true"
    android:elevation="@dimen/material_component_cards_small_elevation"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/mediumGreen"
    app:cardCornerRadius="@dimen/material_component_cards_great_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/ibRefreshLastCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_padding_xsmall"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/refresh_icon_description"
            android:indeterminateTint="@color/colorYellow"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_refresh" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>